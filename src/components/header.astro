---
interface Props {
  title: string
}

const { title } = Astro.props
---

<header class="h-14 p-5 border-b flex justify-between">
  <div class="flex gap-2.5">
    <button
      class="h-4 w-4 rounded-full border hover:bg-primary active:bg-neutral-300 active:border-neutral-300"
    ></button>
    <button
      class="h-4 w-4 rounded-full border hover:bg-primary active:bg-neutral-300 active:border-neutral-300"
    ></button>
    <button
      class="h-4 w-4 rounded-full border hover:bg-primary active:bg-neutral-300 active:border-neutral-300"
    ></button>
  </div>
  <span class="leading-none font-mono font-extralight tracking-tighter">
    {title}
  </span>
</header>
